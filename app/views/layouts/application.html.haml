!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }/
    %meta{ name: "viewport", content: "width=device-width, initial-scale: 1.0" }/
    %title
      = content_for?(:title) ? yield(:title) : "Jobs that MakeSense"
    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "wysihtml5x-toolbar"
    = javascript_include_tag "parser_rules/simple"
    = csrf_meta_tags
  %body
    = yield
    = render 'layouts/metrics'
    = javascript_include_tag "application"
